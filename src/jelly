#!/usr/bin/env bash

CACHE_DIR="$HOME/.cache/jelly/covers"
CONFIG_FILE="$HOME/.config/jelly/config"
DEFAULT_EDITOR="${EDITOR:-vim}"
DEFAULT_MEDIA_PLAYER=$([[ "$OSTYPE" == "darwin"* ]] && echo "iina" || echo "mpv")
PREVIEW_CHECKSUM="$HOME/.local/share/jelly/.chksm"
PREVIEW_SCRIPT="$HOME/.local/share/jelly/preview"
VERSION="3.5.0"

DEFAULT_FZF_OPTS='
    --color=fg:#cad3f5,fg+:#cad3f5,bg:-1,bg+:-1,gutter:#24273a
    --color=header:#8aadf4,hl:#eed49f,hl+:#a6da95,query:#a6da95
    --color=prompt:#c6a0f6,pointer:#a6da95,info:#f4dbd6
    --color=border:#494d64,separator:#b7bdf8,scrollbar:#f0c6c6
    --prompt="Û∞•® Search: " --pointer="‚ùØ" --separator="‚îÄ" --scrollbar="‚îÇ"
    --height=100% --padding=1
'

case "${1}" in
-h | --help)
  cat <<EOF
$(printf '\033[34mjelly\033[0m') - ü™º Explore & Stream Jellyfin via CLI

Usage: $(printf '\033[34mjelly\033[0m') [$(printf '\033[32mCOMMAND\033[0m')]

Options:
  $(printf '\033[32m-h, --help\033[0m')             Show this help message
  $(printf '\033[32mmigrate config\033[0m')         Migrate config to latest version
  $(printf '\033[32mrm cache\033[0m')               Wipe media preview cache
  $(printf '\033[32m-v, --version\033[0m')          Show version

Examples:
  $(printf 'jelly                  Start interactive menu')
  $(printf 'jelly \033[32m-h\033[0m               Show this help message')
  $(printf 'jelly \033[32mmigrate config\033[0m   Migrate config to latest version')
  $(printf 'jelly \033[32mrm cache\033[0m         Wipe media preview cache')
  $(printf 'jelly \033[32m-v\033[0m               Show version')

$(printf '\033[3m\033[34mjelly\033[23m\033[0m \033[32m%s\033[0m created by \033[34mAzureHound\033[0m' "$VERSION")
EOF
  exit 0
  ;;
migrate)
  if [ "$2" = "config" ]; then
    if [ ! -f "$CONFIG_FILE" ]; then
      echo -e "\033[31mError:\033[0m Config not found -> \033[34m$CONFIG_FILE\033[0m"
      exit 1
    fi

    server_val=$(grep "^server=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2-)
    api_key_val=$(grep "^api_key=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2-)

    if [ -z "$server_val" ] || [ -z "$api_key_val" ]; then
      echo -e "\033[31mError:\033[0m Config missing 'server' or 'api_key'"
      exit 1
    fi

    temp_config=$(mktemp)
    {
      echo "server=$server_val"
      echo "api_key=$api_key_val"
    } >"$temp_config"

    mv "$temp_config" "$CONFIG_FILE"
    rm -f "$PREVIEW_SCRIPT" "$PREVIEW_CHECKSUM"
    echo -e "\033[34mMigrating Config ...\033[0m"
    echo -e "\033[31mNote\033[0m: \033[33mRun \033[32m\033[3mJelly\033[23m\033[33m to Complete Migration\033[0m"
    exit 0
  fi
  ;;
rm)
  if [ "$2" = "cache" ]; then
    if [ -z "$(ls -A "$CACHE_DIR" 2>/dev/null)" ]; then
      echo -e "\033[33mNo Cache\033[0m"
    else
      rm "$CACHE_DIR"/* 2>/dev/null
      echo -e "\033[32mCache Wiped\033[0m -> \033[34m$CACHE_DIR\033[0m"
    fi
    exit 0
  fi
  ;;
-v | --version)
  echo -e "\033[32mv$VERSION\033[0m"
  exit 0
  ;;
esac

for cmd in chafa curl fzf jq mpv socat; do
  if ! command -v "$cmd" &>/dev/null; then
    echo -e "\033[31mError:\033[0m '$cmd' is not installed."
    exit 1
  fi
done

mkdir -p "$CACHE_DIR"

if [ ! -f "$CONFIG_FILE" ]; then
  echo -e "\033[32mConfig Generated\033[0m -> \033[34m$CONFIG_FILE\033[0m"
  mkdir -p "$(dirname "$CONFIG_FILE")"
  cat >"$CONFIG_FILE" <<EOL
server=your_jellyfin_server_address
api_key=your_api_key
editor=vim
media_preview=true
player=mpv
autoplay_next_episode=true
mark_continue_percentage=5
mark_watched_percentage=95

# FZF
FZF_DEFAULT_OPTS='$DEFAULT_FZF_OPTS'
EOL
  echo -e "\033[33mUpdate your Server URL & API Key.\033[0m"
  exit 1
fi

needs_update=false
for field in server api_key editor media_preview player autoplay_next_episode mark_continue_percentage mark_watched_percentage FZF_DEFAULT_OPTS; do
  if ! grep -q "^${field}=" "$CONFIG_FILE" 2>/dev/null || [ "$(grep -c "^${field}=" "$CONFIG_FILE")" -gt 1 ]; then
    needs_update=true
    break
  fi
done

[ -z "$(grep "^editor=" "$CONFIG_FILE" | head -1 | cut -d'=' -f2-)" ] && needs_update=true

if [ "$needs_update" = true ]; then
  temp_config=$(mktemp)
  cp "$CONFIG_FILE" "${CONFIG_FILE}.bak"

  server_val=$(grep "^server=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2-)
  api_key_val=$(grep "^api_key=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2-)
  editor_val=$(grep "^editor=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2-)
  media_preview_val=$(grep "^media_preview=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2-)
  player_val=$(grep "^player=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2-)
  autoplay_val=$(grep "^autoplay_next_episode=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2- | sed 's/ *#.*//' | xargs)
  min_progress_val=$(grep "^mark_continue_percentage=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2- | sed 's/ *#.*//' | xargs)
  watched_val=$(grep "^mark_watched_percentage=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2- | sed 's/ *#.*//' | xargs)

  [ -z "$server_val" ] && server_val="http://your-jellyfin-server:8096"
  [ -z "$api_key_val" ] && api_key_val="your_api_key"
  [ -z "$editor_val" ] && editor_val="vim"
  [ -z "$media_preview_val" ] && media_preview_val="true"
  [ -z "$player_val" ] && player_val="mpv"
  [ -z "$autoplay_val" ] && autoplay_val="true"
  [ -z "$min_progress_val" ] && min_progress_val="5"
  [ -z "$watched_val" ] && watched_val="95"

  {
    echo "server=$server_val"
    echo "api_key=$api_key_val"
    echo "editor=$editor_val"
    echo "media_preview=$media_preview_val"
    echo "player=$player_val"
    echo "autoplay_next_episode=$autoplay_val"
    echo "mark_continue_percentage=$min_progress_val"
    echo "mark_watched_percentage=$watched_val"
    echo ""
    echo "# FZF"
  } >"$temp_config"

  if grep -q "FZF_DEFAULT_OPTS" "$CONFIG_FILE" 2>/dev/null; then
    in_fzf=false
    while IFS= read -r line; do
      [[ "$line" =~ FZF_DEFAULT_OPTS ]] && in_fzf=true
      [ "$in_fzf" = true ] && echo "$line" >>"$temp_config"
      [[ "$line" == *"'"* ]] && [[ "$line" != *"FZF_DEFAULT_OPTS"* ]] && break
    done <"$CONFIG_FILE"
  else
    echo "FZF_DEFAULT_OPTS='$DEFAULT_FZF_OPTS'" >>"$temp_config"
  fi

  mv "$temp_config" "$CONFIG_FILE"
  echo -e "\033[33mCONFIG UPDATED!\033[0m\nBACKUP -> \033[34m${CONFIG_FILE}.bak\033[0m"
fi

server=$(grep "^server=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2-)
api_key=$(grep "^api_key=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2-)
editor=$(grep "^editor=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2-)
media_preview=$(grep "^media_preview=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2-)
player=$(grep "^player=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2-)
autoplay_next=$(grep "^autoplay_next_episode=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2- | sed 's/ *#.*//' | xargs)
mark_continue=$(grep "^mark_continue_percentage=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2- | sed 's/ *#.*//' | xargs)
mark_watched=$(grep "^mark_watched_percentage=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2- | sed 's/ *#.*//' | xargs)

eval "$(grep -A 100 "^FZF_DEFAULT_OPTS=" "$CONFIG_FILE" 2>/dev/null | sed -n "/^FZF_DEFAULT_OPTS=/,/'$/p")"

EDITOR=${editor:-vim}
MEDIA_PLAYER=${player:-$DEFAULT_MEDIA_PLAYER}
MEDIA_PREVIEW=${media_preview:-true}
AUTOPLAY_NEXT=${autoplay_next:-true}
MIN_PROGRESS_PERCENT=${mark_continue:-5}
WATCHED_PERCENT=${mark_watched:-95}
[ -z "$FZF_DEFAULT_OPTS" ] && FZF_DEFAULT_OPTS="$DEFAULT_FZF_OPTS"

HAS_CHAFA=$(command -v chafa &>/dev/null && echo "true" || echo "false")

if ! command -v "$MEDIA_PLAYER" &>/dev/null; then
  echo -e "\033[31mError:\033[0m '$MEDIA_PLAYER' is not installed."
  exit 1
fi

if [ -z "$server" ] || [ -z "$api_key" ]; then
  echo -e "\033[31mError:\033[0m Config Missing 'server' or 'api_key'."
  exit 1
fi

if ! curl -s --connect-timeout 5 -o /dev/null "$server"; then
  echo -e "\033[31mCONNECTION TIMEOUT\033[0m -> \033[34m$server\033[0m\n\033[33mCheck your Config\033[0m  -> \033[34m$CONFIG_FILE\033[0m"
  exit 1
fi

export FZF_DEFAULT_OPTS

create_preview_script() {
  mkdir -p "$(dirname "$PREVIEW_SCRIPT")"

  preview_content=$(
    cat <<'PREVIEW_EOF'
#!/usr/bin/env bash
data_file=$1; line=$2; server=$3; api_key=$4; cache_dir=$5; has_chafa=$6

title=$(echo "$line" | sed 's/^[üì∫üé¨üìÇ] //' | sed 's/^E[0-9]*: //' | sed 's/ \[[^]]*\]$//')
item_id=""

if [[ "$title" =~ ^Season\ ([0-9]+)$ ]]; then
  season_num="${BASH_REMATCH[1]}"
  item_id=$(awk -F'|' -v num="$season_num" '$3 + 0 == num + 0 {print $1; exit}' "$data_file" 2>/dev/null)
elif [[ "$title" =~ ^Special:\ (.+)$ ]]; then
  item_id=$(awk -F'|' '$3 == "null" || $3 == "" {print $1; exit}' "$data_file" 2>/dev/null)
else
  clean_title=$(echo "$title" | sed 's/ \[[^]]*\]$//')
  item_id=$(awk -F'|' -v search="$clean_title" '$3 == search {print $1; exit}' "$data_file" 2>/dev/null)

  if [ -z "$item_id" ]; then
    item_id=$(grep -F "$clean_title" "$data_file" 2>/dev/null | head -1 | cut -d'|' -f1)
  fi
fi

[ -z "$item_id" ] && exit 0

user_id=$(curl -s -X GET -H "X-Emby-Token: $api_key" "$server/Users" 2>/dev/null | jq -r '.[0].Id' 2>/dev/null)
[ -z "$user_id" ] || [ "$user_id" = "null" ] && exit 0

cache_file="$cache_dir/$item_id.jpg"
if [ ! -f "$cache_file" ] || [ ! -s "$cache_file" ]; then
  curl -s -o "$cache_file" "$server/Items/$item_id/Images/Primary?maxHeight=600&api_key=$api_key" 2>/dev/null
fi

if [ -f "$cache_file" ] && [ -s "$cache_file" ] && [ "$has_chafa" = "true" ]; then
  preview_width=${FZF_PREVIEW_COLUMNS:-80}
  preview_height=${FZF_PREVIEW_LINES:-40}
  image_height=$((preview_height * 40 / 100))
  [ "$image_height" -gt 22 ] && image_height=22
  [ "$image_height" -lt 16 ] && image_height=16

  if [[ "$TERM" == "xterm-kitty" ]] || [[ "$TERM" == "kitty" ]]; then
    chafa --format=kitty --size="${preview_width}x${image_height}" "$cache_file" 2>/dev/null
  else
    chafa --format=sixel --size="${preview_width}x${image_height}" "$cache_file" 2>/dev/null
  fi

  for ((i=0; i<image_height+1; i++)); do printf '\n'; done
fi

printf '\033[38;2;138;173;244m%s\033[0m\n\n' "‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê"

item_data=$(curl -s -X GET -H "X-Emby-Token: $api_key" "$server/Users/$user_id/Items/$item_id" 2>/dev/null)
[ -z "$item_data" ] || [ "$item_data" = "null" ] && exit 0

item_type=$(echo "$item_data" | jq -r '.Type // "Unknown"' 2>/dev/null)
preview_width=${FZF_PREVIEW_COLUMNS:-80}
name=$(echo "$item_data" | jq -r '.Name // "Unknown"' 2>/dev/null)
year=$(echo "$item_data" | jq -r '(.PremiereDate // .ProductionYear // empty) | tostring | split("-")[0]' 2>/dev/null)

if [ "$item_type" = "Season" ]; then
  if [ -z "$year" ] || [ "$year" = "null" ] || [ "$year" = "" ]; then
    series_id=$(echo "$item_data" | jq -r '.SeriesId // empty' 2>/dev/null)
    if [ -n "$series_id" ] && [ "$series_id" != "null" ]; then
      first_episode=$(curl -s -X GET -H "X-Emby-Token: $api_key" \
        "$server/Shows/$series_id/Episodes?SeasonId=$item_id&UserId=$user_id&Limit=1&Fields=PremiereDate,ProductionYear" 2>/dev/null)
      year=$(echo "$first_episode" | jq -r '.Items[0] | (.PremiereDate // .ProductionYear // empty) | tostring | split("-")[0]' 2>/dev/null)
    fi
  fi
  echo -e "\033[38;2;237;135;150mTitle\033[0m: \033[38;2;183;189;248m$name\033[0m"
  echo -e "\033[38;2;237;135;150mType\033[0m: \033[38;2;183;189;248m$(echo "$item_data" | jq -r '.Type // "Unknown"')\033[0m"
  [ -n "$year" ] && [ "$year" != "null" ] && [ "$year" != "" ] && echo -e "\033[38;2;237;135;150mYear\033[0m: \033[38;2;183;189;248m$year\033[0m"
elif [ "$item_type" = "Series" ]; then
  overview=$(echo "$item_data" | jq -r '.Overview // "No description available"' 2>/dev/null)
  echo -e "\033[38;2;237;135;150mTitle\033[0m: \033[38;2;183;189;248m$name\033[0m"
  echo -e "\033[38;2;237;135;150mType\033[0m: \033[38;2;183;189;248mShow\033[0m"
  [ -n "$year" ] && [ "$year" != "null" ] && [ "$year" != "" ] && echo -e "\033[38;2;237;135;150mYear\033[0m: \033[38;2;183;189;248m$year\033[0m"
  echo ""
  echo -e "\033[38;2;237;135;150mOverview\033[0m:"
  echo -e "\033[38;2;183;189;248m$(echo "$overview" | fold -s -w "$preview_width")\033[0m"
else
  runtime=$(echo "$item_data" | jq -r 'if .RunTimeTicks then ((.RunTimeTicks / 10000000 / 60) | floor | tostring) + " min" else "Unknown" end' 2>/dev/null)
  overview=$(echo "$item_data" | jq -r '.Overview // "No description available"' 2>/dev/null)
  echo -e "\033[38;2;237;135;150mTitle\033[0m: \033[38;2;183;189;248m$name\033[0m"
  echo -e "\033[38;2;237;135;150mType\033[0m: \033[38;2;183;189;248m$(echo "$item_data" | jq -r '.Type // "Unknown"')\033[0m"
  [ -n "$year" ] && [ "$year" != "null" ] && [ "$year" != "" ] && echo -e "\033[38;2;237;135;150mYear\033[0m: \033[38;2;183;189;248m$year\033[0m"
  echo -e "\033[38;2;237;135;150mRuntime\033[0m: \033[38;2;183;189;248m$runtime\033[0m"
  echo ""
  echo -e "\033[38;2;237;135;150mOverview\033[0m:"
  echo -e "\033[38;2;183;189;248m$(echo "$overview" | fold -s -w "$preview_width")\033[0m"
fi
PREVIEW_EOF
  )

  new_checksum=$(echo "$preview_content" | md5sum | awk '{print $1}')
  needs_update=true

  if [ -f "$PREVIEW_CHECKSUM" ] && [ -f "$PREVIEW_SCRIPT" ]; then
    old_checksum=$(cat "$PREVIEW_CHECKSUM" 2>/dev/null)
    [ "$old_checksum" = "$new_checksum" ] && needs_update=false
  fi

  if [ "$needs_update" = true ]; then
    echo "$preview_content" >"$PREVIEW_SCRIPT"
    chmod +x "$PREVIEW_SCRIPT"
    echo "$new_checksum" >"$PREVIEW_CHECKSUM"
  fi
}

create_preview_script

USER_ID_CACHE=""
LIBRARIES_CACHE=""
RECOMMENDATIONS_CACHE=""
RECOMMENDATIONS_SEED=$((RANDOM % 50))

fetch_user_id() {
  if [ -n "$USER_ID_CACHE" ]; then
    echo "$USER_ID_CACHE"
    return
  fi
  USER_ID_CACHE=$(curl -s -X GET -H "X-Emby-Token: $api_key" "$server/Users" | jq -r '.[0].Id')
  echo "$USER_ID_CACHE"
}

fetch_continue_watching() {
  local user_id=$(fetch_user_id)
  curl -s -X GET -H "X-Emby-Token: $api_key" \
    "$server/Users/$user_id/Items/Resume" | jq -r '.Items[] | if .Type == "Episode" then "\(.Id)|\(.Type)|\(.SeriesName) - \(.Name)|\(.UserData.PlaybackPositionTicks|tonumber / 10000000)|\(.SeriesId)|\(.IndexNumber)|\(.ParentIndexNumber)" else "\(.Id)|\(.Type)|\(.Name)|\(.UserData.PlaybackPositionTicks|tonumber / 10000000)" end'
}

fetch_next_up() {
  local user_id=$(fetch_user_id)
  curl -s -X GET -H "X-Emby-Token: $api_key" \
    "$server/Shows/NextUp?UserId=$user_id" | jq -r '.Items[] | "\(.Id)|\(.Type)|\(.SeriesName) - \(.Name)|\(.UserData.PlaybackPositionTicks|tonumber / 10000000)|\(.SeriesId)|\(.IndexNumber)|\(.ParentIndexNumber)"'
}

fetch_recommendations() {
  if [ -n "$RECOMMENDATIONS_CACHE" ]; then
    echo "$RECOMMENDATIONS_CACHE"
    return
  fi
  local user_id=$(fetch_user_id)
  RECOMMENDATIONS_CACHE=$(curl -s -X GET -H "X-Emby-Token: $api_key" \
    "$server/Users/$user_id/Items?IncludeItemTypes=Movie,Series&Limit=100&Recursive=true&StartIndex=$RECOMMENDATIONS_SEED" | jq -r '.Items[] | "\(.Id)|\(.Type)|\(.Name)"')
  echo "$RECOMMENDATIONS_CACHE"
}

fetch_recently_added() {
  local user_id=$(fetch_user_id)
  curl -s -X GET -H "X-Emby-Token: $api_key" \
    "$server/Users/$user_id/Items?SortBy=DateCreated&SortOrder=Descending&IncludeItemTypes=Movie&Limit=50&Recursive=true&IsPlayed=false" | jq -r '.Items[] | "\(.Id)|\(.Type)|\(.Name)"'
}

fetch_recently_added_shows() {
  local user_id=$(fetch_user_id)
  curl -s -X GET -H "X-Emby-Token: $api_key" \
    "$server/Users/$user_id/Items?SortBy=DateCreated&SortOrder=Descending&IncludeItemTypes=Series&Limit=50&Recursive=true&IsPlayed=false" | jq -r '.Items[] | "\(.Id)|\(.Type)|\(.Name)"'
}

fetch_libraries() {
  local user_id=$(fetch_user_id)
  curl -s -X GET -H "X-Emby-Token: $api_key" "$server/Users/$user_id/Views" | jq -r '.Items[] | select(.CollectionType != "boxsets") | "\(.Id)|\(.Name)"'
}

get_libraries_cached() {
  if [ -z "$LIBRARIES_CACHE" ]; then
    LIBRARIES_CACHE=$(fetch_libraries)
  fi
  echo "$LIBRARIES_CACHE"
}

fetch_media() {
  curl -s -X GET -H "X-Emby-Token: $api_key" \
    "$server/Items?ParentId=$1&IncludeItemTypes=Movie,Series&Recursive=true" | jq -r '.Items[] | "\(.Id)|\(.Type)|\(.Name)"'
}

fetch_seasons() {
  curl -s -X GET -H "X-Emby-Token: $api_key" \
    "$server/Shows/$1/Seasons?UserId=$(fetch_user_id)" | jq -r '.Items[] | "\(.Id)|\(.Name)|\(.IndexNumber)"'
}

fetch_episodes() {
  local series_id=$1
  local season_id=$2

  if [ -n "$season_id" ]; then
    curl -s -X GET -H "X-Emby-Token: $api_key" \
      "$server/Shows/$series_id/Episodes?SeasonId=$season_id&UserId=$(fetch_user_id)" |
      jq -r '.Items[] | "\(.Id)|\(.Name)|\(.IndexNumber)|\(.ParentIndexNumber)"'
  else
    curl -s -X GET -H "X-Emby-Token: $api_key" \
      "$server/Shows/$series_id/Episodes?UserId=$(fetch_user_id)" |
      jq -r '.Items[] | "\(.Id)|\(.Name)|\(.IndexNumber)|\(.ParentIndexNumber)"'
  fi
}

get_playback_progress() {
  local user_id=$(fetch_user_id)
  local progress=$(curl -s -X GET -H "X-Emby-Token: $api_key" \
    "$server/Users/$user_id/Items/$1" | jq '.UserData.PlaybackPositionTicks // 0')
  awk -v ticks="$progress" 'BEGIN { printf "%.0f", ticks / 10000000 }'
}

start_playback_session() {
  local user_id=$(fetch_user_id)
  curl -s -X POST -H "X-Emby-Token: $api_key" -H "X-Emby-Client: Jelly" \
    -H "X-Emby-Device-Name: $(uname -n)" -H "X-Emby-Device-Id: $(uname -n)-$$" \
    -H "X-Emby-Client-Version: 1.0" -H "Content-Type: application/json" \
    -d "{\"UserId\":\"$user_id\",\"ItemId\":\"$1\",\"PlaySessionId\":\"jelly-$1-$$\",\"CanSeek\":true,\"IsPaused\":false,\"IsMuted\":false,\"VolumeLevel\":100}" \
    "$server/Sessions/Playing" >/dev/null
}

report_progress() {
  local user_id=$(fetch_user_id)
  local position_ticks=$(awk -v seconds="$2" 'BEGIN { printf "%.0f", seconds * 10000000 }')
  local runtime=$(curl -s -X GET -H "X-Emby-Token: $api_key" \
    "$server/Users/$user_id/Items/$1" | jq '.RunTimeTicks // 0')
  local completion_percent=0

  [ "$runtime" -gt 0 ] && completion_percent=$(awk -v pos="$position_ticks" -v total="$runtime" 'BEGIN { printf "%.0f", (pos / total) * 100 }')

  if [ "$completion_percent" -ge "$MIN_PROGRESS_PERCENT" ]; then
    local played_status="false"
    local final_position=$position_ticks

    if [ "$completion_percent" -ge "$WATCHED_PERCENT" ]; then
      played_status="true"
      final_position=0
    fi

    curl -s -X POST -H "X-Emby-Token: $api_key" -H "Content-Type: application/json" \
      -d "{\"PlaybackPositionTicks\":$final_position,\"Played\":$played_status}" \
      "$server/Users/$user_id/Items/$1/UserData" >/dev/null 2>&1
  fi

  curl -s -X POST -H "X-Emby-Token: $api_key" -H "X-Emby-Client: Jelly" \
    -H "X-Emby-Device-Name: $(uname -n)" -H "X-Emby-Device-Id: $(uname -n)-$$" \
    -H "X-Emby-Client-Version: 1.0" -H "Content-Type: application/json" \
    -d "{\"UserId\":\"$user_id\",\"ItemId\":\"$1\",\"PlaySessionId\":\"jelly-$1-$$\",\"PositionTicks\":$position_ticks,\"IsPaused\":${3:-false},\"EventName\":\"timeupdate\"}" \
    "$server/Sessions/Playing/Progress" >/dev/null
}

stop_playback_session() {
  local user_id=$(fetch_user_id)
  local position_ticks=$(awk -v seconds="$2" 'BEGIN { printf "%.0f", seconds * 10000000 }')

  curl -s -X POST -H "X-Emby-Token: $api_key" -H "X-Emby-Client: Jelly" \
    -H "X-Emby-Device-Name: $(uname -n)" -H "X-Emby-Device-Id: $(uname -n)-$$" \
    -H "X-Emby-Client-Version: 1.0" -H "Content-Type: application/json" \
    -d "{\"UserId\":\"$user_id\",\"ItemId\":\"$1\",\"PlaySessionId\":\"jelly-$1-$$\",\"PositionTicks\":$position_ticks}" \
    "$server/Sessions/Playing/Stopped" >/dev/null
}

play_media() {
  local id=$1
  local name=$2
  local resume_position=${3:-0}
  local playback_url="$server/Videos/$id/stream?X-Emby-Token=$api_key&Static=true"
  local socket_path="/tmp/mpv-socket-$$"
  local final_position=0

  local server_position=$(get_playback_progress "$id")
  [ -n "$server_position" ] && [ "$server_position" -gt 0 ] && resume_position=$server_position
  resume_position=$(echo "$resume_position" | tr -cd '0-9.' | awk '{printf "%.0f", $1}')

  if [ "$resume_position" -gt 0 ]; then
    choice=$(echo -e "$(date -u -d "@$resume_position" +"%H:%M:%S")\nStart from the beginning" | fzf --header="$name")
    case "$choice" in
    "Start from the beginning") resume_position=0 ;;
    "")
      echo "0"
      return
      ;;
    esac
  fi

  start_playback_session "$id"

  if [ "$MEDIA_PLAYER" = "iina" ]; then
    open -a IINA "$playback_url" --args --start-time="$resume_position" --force-media-title="$name"
    sleep 2
  else
    mpv "$playback_url" --start="$resume_position" --force-media-title="$name" \
      --force-seekable=yes --demuxer-lavf-o=fflags=+genpts \
      --demuxer-lavf-probe-info=nostreams --demuxer-max-bytes=500MiB \
      --cache=yes --cache-secs=60 --stream-lavf-o=reconnect_streamed=1 \
      --stream-lavf-o=reconnect_delay_max=4 --input-ipc-server="$socket_path" \
      --quiet --no-terminal &
    mpv_pid=$!

    (
      sleep 2
      while kill -0 $mpv_pid 2>/dev/null; do
        if [ -S "$socket_path" ]; then
          position=$(echo '{ "command": ["get_property", "playback-time"] }' | socat - "$socket_path" 2>/dev/null | grep -o '"data":[0-9.]*' | sed 's/"data"://g')
          [[ "$position" =~ ^[0-9]+(\.[0-9]+)?$ ]] && final_position=$position && report_progress "$id" "$position" "false" && echo "$final_position" >"/tmp/jelly_pos_$$"
        fi
        sleep 2
      done
      stop_playback_session "$id" "$final_position"
    ) &

    wait $mpv_pid

    if [ -f "/tmp/jelly_pos_$$" ]; then
      final_position=$(cat "/tmp/jelly_pos_$$")
      rm -f "/tmp/jelly_pos_$$"
    fi

    rm -f "$socket_path"
  fi

  local user_id=$(fetch_user_id)
  local runtime=$(curl -s -X GET -H "X-Emby-Token: $api_key" "$server/Users/$user_id/Items/$id" 2>/dev/null | jq -r '.RunTimeTicks // 0')
  local position_ticks=$(awk -v sec="$final_position" 'BEGIN { printf "%.0f", sec * 10000000 }')
  local completion_percent=0
  [ "$runtime" -gt 0 ] && completion_percent=$(awk -v pos="$position_ticks" -v total="$runtime" 'BEGIN { printf "%.0f", (pos / total) * 100 }')

  echo "$completion_percent"
}

play_episode_with_autoplay() {
  local episode_id=$1
  local episode_name=$2
  local episode_num=$3
  local episodes_data=$4
  local media_id=$5
  local season_id=$6

  local completion=$(play_media "$episode_id" "$episode_name" "0")

  if [ "$AUTOPLAY_NEXT" = "true" ] && [ "$completion" -ge 80 ]; then
    local next_ep=$(echo "$episodes_data" | awk -F'|' -v curr="$episode_num" '$3 + 0 == curr + 1 {print; exit}')

    if [ -n "$next_ep" ]; then
      local next_id=$(echo "$next_ep" | awk -F'|' '{print $1}')
      local next_name=$(echo "$next_ep" | awk -F'|' '{print $2}')
      local next_num=$(echo "$next_ep" | awk -F'|' '{print $3}')

      play_episode_with_autoplay "$next_id" "$next_name" "$next_num" "$episodes_data" "$media_id" "$season_id"
    fi
  fi
}

play_episode_direct_autoplay() {
  local episode_id=$1
  local episode_name=$2
  local series_id=$3
  local season_num=$4
  local episode_num=$5

  local completion=$(play_media "$episode_id" "$episode_name" "0")

  if [ "$AUTOPLAY_NEXT" = "true" ] && [ "$completion" -ge 80 ] && [ -n "$series_id" ] && [ -n "$season_num" ]; then
    local season_id=$(curl -s -X GET -H "X-Emby-Token: $api_key" "$server/Shows/$series_id/Seasons?UserId=$(fetch_user_id)" 2>/dev/null | jq -r ".Items[] | select(.IndexNumber == $season_num) | .Id" | head -1)

    if [ -n "$season_id" ]; then
      local episodes_data=$(fetch_episodes "$series_id" "$season_id")
      local next_ep=$(echo "$episodes_data" | awk -F'|' -v curr="$episode_num" '$3 + 0 == curr + 1 {print; exit}')

      if [ -n "$next_ep" ]; then
        local next_id=$(echo "$next_ep" | awk -F'|' '{print $1}')
        local next_name=$(echo "$next_ep" | awk -F'|' '{print $2}')
        local next_num=$(echo "$next_ep" | awk -F'|' '{print $3}')

        play_episode_direct_autoplay "$next_id" "$next_name" "$series_id" "$season_num" "$next_num"
      fi
    fi
  fi
}

edit_config_file() {
  if ! command -v "$EDITOR" &>/dev/null; then
    echo -e "Editor \033[31m$EDITOR\033[0m is not installed.\nAdd a valid editor in your Config.\n"
    read -n 1 -s -r -p "Press any key to continue..."
    return
  fi

  "$EDITOR" "$CONFIG_FILE"

  server=$(grep "^server=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2-)
  api_key=$(grep "^api_key=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2-)
  editor=$(grep "^editor=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2-)
  media_preview=$(grep "^media_preview=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2-)
  player=$(grep "^player=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2-)
  autoplay_next=$(grep "^autoplay_next_episode=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2- | sed 's/ *#.*//' | xargs)
  mark_continue=$(grep "^mark_continue_percentage=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2- | sed 's/ *#.*//' | xargs)
  mark_watched=$(grep "^mark_watched_percentage=" "$CONFIG_FILE" 2>/dev/null | head -1 | cut -d'=' -f2- | sed 's/ *#.*//' | xargs)

  eval "$(grep -A 100 "^FZF_DEFAULT_OPTS=" "$CONFIG_FILE" 2>/dev/null | sed -n "/^FZF_DEFAULT_OPTS=/,/'$/p")"

  MEDIA_PLAYER=${player:-$DEFAULT_MEDIA_PLAYER}
  MEDIA_PREVIEW=${media_preview:-true}
  EDITOR=${editor:-vim}
  AUTOPLAY_NEXT=${autoplay_next:-true}
  MIN_PROGRESS_PERCENT=${mark_continue:-5}
  WATCHED_PERCENT=${mark_watched:-95}
  [ -z "$FZF_DEFAULT_OPTS" ] && FZF_DEFAULT_OPTS="$DEFAULT_FZF_OPTS"

  export FZF_DEFAULT_OPTS
  echo -e "\033[32mCONFIG RELOADED\033[0m"
  sleep 1
}

main() {
  while true; do
    main_menu_option=$(echo -e "üçø Continue Watching\nüéûÔ∏è Next Up\nüé≤ Recommendations\nüé¨ Recently Added Movies\nüì∫ Recently Added Shows\nüîç Search\nüìÇ Libraries\n‚öôÔ∏è Settings" | fzf)
    [ $? -ne 0 ] && exit 0

    case "$main_menu_option" in
    "üçø Continue Watching")
      while true; do
        local data=$(fetch_continue_watching)

        data_file=$(mktemp)
        trap 'rm -f "$data_file"' RETURN
        echo "$data" >"$data_file"

        watch_list=$(echo "$data" | awk -F'|' '{if ($2 == "Episode") print "üì∫ " $3; else if ($2 == "Movie") print "üé¨ " $3}')
        if [ "$MEDIA_PREVIEW" = "true" ]; then
          selected_option=$(echo "$watch_list" | fzf --header="Continue Watching" \
            --preview "$PREVIEW_SCRIPT '$data_file' {} '$server' '$api_key' '$CACHE_DIR' '$HAS_CHAFA'" \
            --preview-window=right:40%)
        else
          selected_option=$(echo "$watch_list" | fzf --header="Continue Watching")
        fi

        [ $? -ne 0 ] && break

        title_only=$(echo "$selected_option" | sed 's/^[üì∫üé¨] //')
        media_id=$(echo "$data" | grep -F "$title_only" | head -1 | awk -F'|' '{print $1}')
        media_type=$(echo "$data" | grep -F "$title_only" | head -1 | awk -F'|' '{print $2}')
        display_name=$(echo "$data" | grep -F "$title_only" | head -1 | awk -F'|' '{print $3}')
        resume_position=$(echo "$data" | grep -F "$title_only" | head -1 | awk -F'|' '{print $4}')

        if [ "$media_type" = "Episode" ]; then
          media_name=$(echo "$display_name" | sed 's/^.* - //')
          series_id=$(echo "$data" | grep -F "$title_only" | head -1 | awk -F'|' '{print $5}')
          episode_num=$(echo "$data" | grep -F "$title_only" | head -1 | awk -F'|' '{print $6}')
          season_num=$(echo "$data" | grep -F "$title_only" | head -1 | awk -F'|' '{print $7}')

          if [ -n "$series_id" ] && [ "$series_id" != "null" ]; then
            play_episode_direct_autoplay "$media_id" "$media_name" "$series_id" "$season_num" "$episode_num"
          else
            play_media "$media_id" "$media_name" "$resume_position" >/dev/null
          fi
        else
          play_media "$media_id" "$display_name" "$resume_position" >/dev/null
        fi
      done
      ;;

    "üéûÔ∏è Next Up")
      while true; do
        local data=$(fetch_next_up)

        data_file=$(mktemp)
        trap 'rm -f "$data_file"' RETURN
        echo "$data" >"$data_file"

        watch_list=$(echo "$data" | awk -F'|' '{print "üì∫ " $3}')
        if [ "$MEDIA_PREVIEW" = "true" ]; then
          selected_option=$(echo "$watch_list" | fzf --header="Next Up" \
            --preview "$PREVIEW_SCRIPT '$data_file' {} '$server' '$api_key' '$CACHE_DIR' '$HAS_CHAFA'" \
            --preview-window=right:40%)
        else
          selected_option=$(echo "$watch_list" | fzf --header="Next Up")
        fi

        [ $? -ne 0 ] && break

        title_only=$(echo "$selected_option" | sed 's/^üì∫ //')
        media_id=$(echo "$data" | grep -F "$title_only" | head -1 | awk -F'|' '{print $1}')
        display_name=$(echo "$data" | grep -F "$title_only" | head -1 | awk -F'|' '{print $3}')
        media_name=$(echo "$display_name" | sed 's/^.* - //')
        series_id=$(echo "$data" | grep -F "$title_only" | head -1 | awk -F'|' '{print $5}')
        episode_num=$(echo "$data" | grep -F "$title_only" | head -1 | awk -F'|' '{print $6}')
        season_num=$(echo "$data" | grep -F "$title_only" | head -1 | awk -F'|' '{print $7}')

        if [ -n "$series_id" ] && [ "$series_id" != "null" ]; then
          play_episode_direct_autoplay "$media_id" "$media_name" "$series_id" "$season_num" "$episode_num"
        else
          play_media "$media_id" "$media_name" "0" >/dev/null
        fi
      done
      ;;

    "üé≤ Recommendations")
      while true; do
        recommendations_data=$(fetch_recommendations)
        data="$recommendations_data"
        data_file=$(mktemp)
        trap 'rm -f "$data_file"' RETURN
        echo "$data" >"$data_file"

        media_list=$(echo "$data" | awk -F'|' '{if ($2 == "Movie") print "üé¨ " $3; else if ($2 == "Series") print "üì∫ " $3}')
        if [ "$MEDIA_PREVIEW" = "true" ]; then
          selected=$(echo "$media_list" | fzf --header="Recommendations" \
            --preview "$PREVIEW_SCRIPT '$data_file' {} '$server' '$api_key' '$CACHE_DIR' '$HAS_CHAFA'" \
            --preview-window=right:40%)
        else
          selected=$(echo "$media_list" | fzf --header="Recommendations")
        fi

        [ $? -ne 0 ] && break

        title_only=$(echo "$selected" | sed 's/^[üé¨üì∫] //')
        item_data=$(echo "$data" | grep -F "$title_only" | head -1)
        media_id=$(echo "$item_data" | awk -F'|' '{print $1}')
        media_type=$(echo "$item_data" | awk -F'|' '{print $2}')
        media_name=$(echo "$item_data" | awk -F'|' '{print $3}')

        if [ "$media_type" = "Series" ]; then
          seasons_data=$(fetch_seasons "$media_id")
          season_count=$(echo "$seasons_data" | grep -v "^$" | wc -l)

          if [ "$season_count" -eq 1 ]; then
            season_id=$(echo "$seasons_data" | awk -F'|' '{print $1}')
            season_info=$(echo "$seasons_data" | awk -F'|' '{if ($3 == "null") printf "Special: %s", $2; else printf "Season %s", $3}')

            while true; do
              episodes_data=$(fetch_episodes "$media_id" "$season_id")
              data_file=$(mktemp)
              trap 'rm -f "$data_file"' RETURN
              echo "$episodes_data" >"$data_file"

              episodes_list=$(echo "$episodes_data" | awk -F'|' '{printf "E%02d: %s\n", $3, $2}')
              if [ "$MEDIA_PREVIEW" = "true" ]; then
                selected_episode=$(echo "$episodes_list" | fzf --header="$season_info" \
                  --preview "$PREVIEW_SCRIPT '$data_file' {} '$server' '$api_key' '$CACHE_DIR' '$HAS_CHAFA'" \
                  --preview-window=right:40%)
              else
                selected_episode=$(echo "$episodes_list" | fzf --header="$season_info")
              fi

              fzf_exit=$?
              [ "$fzf_exit" -ne 0 ] && break

              episode_name=$(echo "$selected_episode" | sed -E 's/^E[0-9]+: (.*)/\1/')
              episode_data=$(echo "$episodes_data" | grep -F "$episode_name" | head -1)
              episode_id=$(echo "$episode_data" | awk -F'|' '{print $1}')
              episode_display_name=$(echo "$episode_data" | awk -F'|' '{print $2}')
              episode_num=$(echo "$episode_data" | awk -F'|' '{print $3}')

              play_episode_with_autoplay "$episode_id" "$episode_display_name" "$episode_num" "$episodes_data" "$media_id" "$season_id"
            done
          else
            while true; do
              data_file=$(mktemp)
              trap 'rm -f "$data_file"' RETURN
              echo "$seasons_data" >"$data_file"

              seasons_list=$(echo "$seasons_data" | awk -F'|' '{if ($3 == "null") printf "üìÇ Special: %s\n", $2; else printf "üìÇ Season %s\n", $3}')
              if [ "$MEDIA_PREVIEW" = "true" ]; then
                selected_season=$(echo "$seasons_list" | fzf --header="$media_name" \
                  --preview "$PREVIEW_SCRIPT '$data_file' {} '$server' '$api_key' '$CACHE_DIR' '$HAS_CHAFA'" \
                  --preview-window=right:40%)
              else
                selected_season=$(echo "$seasons_list" | fzf --header="$media_name")
              fi

              fzf_exit=$?
              [ "$fzf_exit" -ne 0 ] && break

              season_number=$(echo "$selected_season" | sed -E 's/üìÇ Season ([0-9]+)/\1/')

              if [[ "$selected_season" == "üìÇ Special"* ]]; then
                season_id=$(echo "$seasons_data" | grep -F "Special" | head -1 | awk -F'|' '{print $1}')
                season_info="Special"
              else
                season_id=$(echo "$seasons_data" | grep -F "Season $season_number" | head -1 | awk -F'|' '{print $1}')
                season_info="Season $season_number"
              fi

              while true; do
                episodes_data=$(fetch_episodes "$media_id" "$season_id")
                data_file=$(mktemp)
                trap 'rm -f "$data_file"' RETURN
                echo "$episodes_data" >"$data_file"

                episodes_list=$(echo "$episodes_data" | awk -F'|' '{printf "E%02d: %s\n", $3, $2}')
                if [ "$MEDIA_PREVIEW" = "true" ]; then
                  selected_episode=$(echo "$episodes_list" | fzf --header="$season_info" \
                    --preview "$PREVIEW_SCRIPT '$data_file' {} '$server' '$api_key' '$CACHE_DIR' '$HAS_CHAFA'" \
                    --preview-window=right:40%)
                else
                  selected_episode=$(echo "$episodes_list" | fzf --header="$season_info")
                fi

                fzf_exit=$?
                [ "$fzf_exit" -ne 0 ] && break

                episode_name=$(echo "$selected_episode" | sed -E 's/^E[0-9]+: (.*)/\1/')
                episode_data=$(echo "$episodes_data" | grep -F "$episode_name" | head -1)
                episode_id=$(echo "$episode_data" | awk -F'|' '{print $1}')
                episode_display_name=$(echo "$episode_data" | awk -F'|' '{print $2}')
                episode_num=$(echo "$episode_data" | awk -F'|' '{print $3}')

                play_episode_with_autoplay "$episode_id" "$episode_display_name" "$episode_num" "$episodes_data" "$media_id" "$season_id"
              done
            done
          fi
        else
          play_media "$media_id" "$media_name" "$(get_playback_progress "$media_id")" >/dev/null
        fi
      done
      ;;

    "üé¨ Recently Added Movies")
      while true; do
        data=$(fetch_recently_added)
        data_file=$(mktemp)
        trap 'rm -f "$data_file"' RETURN
        echo "$data" >"$data_file"

        media_list=$(echo "$data" | awk -F'|' '{print "üé¨ " $3}')
        if [ "$MEDIA_PREVIEW" = "true" ]; then
          selected=$(echo "$media_list" | fzf --header="Recently Added Movies" \
            --preview "$PREVIEW_SCRIPT '$data_file' {} '$server' '$api_key' '$CACHE_DIR' '$HAS_CHAFA'" \
            --preview-window=right:40%)
        else
          selected=$(echo "$media_list" | fzf --header="Recently Added Movies")
        fi

        [ $? -ne 0 ] && break

        title_only=$(echo "$selected" | sed 's/^üé¨ //')
        media_id=$(echo "$data" | grep -F "$title_only" | head -1 | awk -F'|' '{print $1}')
        media_name=$(echo "$data" | grep -F "$title_only" | head -1 | awk -F'|' '{print $3}')

        play_media "$media_id" "$media_name" "0" >/dev/null
      done
      ;;

    "üì∫ Recently Added Shows")
      while true; do
        data=$(fetch_recently_added_shows)
        data_file=$(mktemp)
        trap 'rm -f "$data_file"' RETURN
        echo "$data" >"$data_file"

        media_list=$(echo "$data" | awk -F'|' '{print "üì∫ " $3}')
        if [ "$MEDIA_PREVIEW" = "true" ]; then
          selected=$(echo "$media_list" | fzf --header="Recently Added Shows" \
            --preview "$PREVIEW_SCRIPT '$data_file' {} '$server' '$api_key' '$CACHE_DIR' '$HAS_CHAFA'" \
            --preview-window=right:40%)
        else
          selected=$(echo "$media_list" | fzf --header="Recently Added Shows")
        fi

        [ $? -ne 0 ] && break

        title_only=$(echo "$selected" | sed 's/^üì∫ //')
        media_id=$(echo "$data" | grep -F "$title_only" | head -1 | awk -F'|' '{print $1}')
        media_name=$(echo "$data" | grep -F "$title_only" | head -1 | awk -F'|' '{print $3}')

        user_id=$(fetch_user_id)
        seasons_data=$(curl -s -X GET -H "X-Emby-Token: $api_key" \
          "$server/Shows/$media_id/Seasons?UserId=$user_id" | jq -r '.Items[] | "\(.Id)|\(.Name)|\(.IndexNumber)"')

        season_count=$(echo "$seasons_data" | grep -v "^$" | wc -l)

        if [ "$season_count" -eq 1 ]; then
          season_id=$(echo "$seasons_data" | awk -F'|' '{print $1}')
          season_info=$(echo "$seasons_data" | awk -F'|' '{if ($3 == "null") printf "Special: %s", $2; else printf "Season %s", $3}')

          while true; do
            episodes_data=$(curl -s -X GET -H "X-Emby-Token: $api_key" \
              "$server/Shows/$media_id/Episodes?SeasonId=$season_id&UserId=$user_id" | jq -r '.Items[] | "\(.Id)|\(.Name)|\(.IndexNumber)|\(.ParentIndexNumber)"')

            episodes_list=$(echo "$episodes_data" | awk -F'|' '{if ($3 && $3 != "null") printf "E%02d: %s\n", $3, $2}')

            if [ -z "$episodes_list" ]; then
              break
            fi

            data_file=$(mktemp)
            trap 'rm -f "$data_file"' RETURN
            echo "$episodes_data" >"$data_file"

            if [ "$MEDIA_PREVIEW" = "true" ]; then
              selected_episode=$(echo "$episodes_list" | fzf --header="$season_info" \
                --preview "$PREVIEW_SCRIPT '$data_file' {} '$server' '$api_key' '$CACHE_DIR' '$HAS_CHAFA'" \
                --preview-window=right:40%)
            else
              selected_episode=$(echo "$episodes_list" | fzf --header="$season_info")
            fi

            fzf_exit=$?
            [ "$fzf_exit" -ne 0 ] && break

            episode_name=$(echo "$selected_episode" | sed -E 's/^E[0-9]+: (.*)/\1/')
            episode_data=$(echo "$episodes_data" | grep -F "$episode_name" | head -1)
            episode_id=$(echo "$episode_data" | awk -F'|' '{print $1}')
            episode_display_name=$(echo "$episode_data" | awk -F'|' '{print $2}')
            episode_num=$(echo "$episode_data" | awk -F'|' '{print $3}')

            play_episode_with_autoplay "$episode_id" "$episode_display_name" "$episode_num" "$episodes_data" "$media_id" "$season_id"
          done
        else
          while true; do
            data_file=$(mktemp)
            trap 'rm -f "$data_file"' RETURN
            echo "$seasons_data" >"$data_file"

            seasons_list=$(echo "$seasons_data" | while read line; do
              season_id=$(echo "$line" | cut -d'|' -f1)
              unwatched=$(curl -s -X GET -H "X-Emby-Token: $api_key" \
                "$server/Shows/$media_id/Episodes?SeasonId=$season_id&UserId=$user_id" | jq -r '.Items[] | select(.UserData.Played == false)' | wc -l)
              if [ "$unwatched" -gt 0 ]; then
                echo "$line" | awk -F'|' '{if ($3 == "null") printf "üìÇ Special: %s\n", $2; else printf "üìÇ Season %s\n", $3}'
              fi
            done)

            if [ -z "$seasons_list" ]; then
              break
            fi

            if [ "$MEDIA_PREVIEW" = "true" ]; then
              selected_season=$(echo "$seasons_list" | fzf --header="$media_name" \
                --preview "$PREVIEW_SCRIPT '$data_file' {} '$server' '$api_key' '$CACHE_DIR' '$HAS_CHAFA'" \
                --preview-window=right:40%)
            else
              selected_season=$(echo "$seasons_list" | fzf --header="$media_name")
            fi

            fzf_exit=$?
            [ "$fzf_exit" -ne 0 ] && break

            season_number=$(echo "$selected_season" | sed -E 's/üìÇ Season ([0-9]+)/\1/')

            if [[ "$selected_season" == "üìÇ Special"* ]]; then
              season_id=$(echo "$seasons_data" | grep -F "Special" | head -1 | awk -F'|' '{print $1}')
              season_info="Special"
            else
              season_id=$(echo "$seasons_data" | grep -F "Season $season_number" | head -1 | awk -F'|' '{print $1}')
              season_info="Season $season_number"
            fi

            while true; do
              episodes_data=$(curl -s -X GET -H "X-Emby-Token: $api_key" \
                "$server/Shows/$media_id/Episodes?SeasonId=$season_id&UserId=$user_id" | jq -r '.Items[] | "\(.Id)|\(.Name)|\(.IndexNumber)|\(.ParentIndexNumber)"')

              episodes_list=$(echo "$episodes_data" | awk -F'|' '{if ($3 && $3 != "null") printf "E%02d: %s\n", $3, $2}')

              if [ -z "$episodes_list" ]; then
                break
              fi

              data_file=$(mktemp)
              trap 'rm -f "$data_file"' RETURN
              echo "$episodes_data" >"$data_file"

              if [ "$MEDIA_PREVIEW" = "true" ]; then
                selected_episode=$(echo "$episodes_list" | fzf --header="$season_info" \
                  --preview "$PREVIEW_SCRIPT '$data_file' {} '$server' '$api_key' '$CACHE_DIR' '$HAS_CHAFA'" \
                  --preview-window=right:40%)
              else
                selected_episode=$(echo "$episodes_list" | fzf --header="$season_info")
              fi

              fzf_exit=$?
              [ "$fzf_exit" -ne 0 ] && break

              episode_name=$(echo "$selected_episode" | sed -E 's/^E[0-9]+: (.*)/\1/')
              episode_data=$(echo "$episodes_data" | grep -F "$episode_name" | head -1)
              episode_id=$(echo "$episode_data" | awk -F'|' '{print $1}')
              episode_display_name=$(echo "$episode_data" | awk -F'|' '{print $2}')
              episode_num=$(echo "$episode_data" | awk -F'|' '{print $3}')

              play_episode_with_autoplay "$episode_id" "$episode_display_name" "$episode_num" "$episodes_data" "$media_id" "$season_id"
            done
          done
        fi
      done
      ;;

    "üìÇ Libraries")
      while true; do
        libraries_list=$(get_libraries_cached | awk -F'|' '{print "üìÇ " $2}')
        library_selected=$(echo "$libraries_list" | fzf --header="Libraries")
        [ $? -ne 0 ] && break

        selected_library_name=$(echo "$library_selected" | sed 's/üìÇ //')
        selected_library_id=$(get_libraries_cached | grep -F "$selected_library_name" | awk -F'|' '{print $1}')

        while true; do
          media_data=$(fetch_media "$selected_library_id")
          data_file=$(mktemp)
          trap 'rm -f "$data_file"' RETURN
          echo "$media_data" >"$data_file"

          media_list=$(echo "$media_data" | awk -F'|' '{if ($2 == "Movie") print "üé¨ " $3; else if ($2 == "Series") print "üì∫ " $3}')
          if [ "$MEDIA_PREVIEW" = "true" ]; then
            selected=$(echo "$media_list" | fzf --header="$selected_library_name" \
              --preview "$PREVIEW_SCRIPT '$data_file' {} '$server' '$api_key' '$CACHE_DIR' '$HAS_CHAFA'" \
              --preview-window=right:40%)
          else
            selected=$(echo "$media_list" | fzf --header="$selected_library_name")
          fi

          fzf_exit=$?
          [ "$fzf_exit" -ne 0 ] && break

          title_only=$(echo "$selected" | sed 's/^[üé¨üì∫] //')
          item_data=$(echo "$media_data" | grep -F "$title_only" | head -1)
          media_id=$(echo "$item_data" | awk -F'|' '{print $1}')
          media_type=$(echo "$item_data" | awk -F'|' '{print $2}')
          media_name=$(echo "$item_data" | awk -F'|' '{print $3}')

          if [ "$media_type" = "Series" ]; then
            seasons_data=$(fetch_seasons "$media_id")
            season_count=$(echo "$seasons_data" | grep -v "^$" | wc -l)

            while true; do
              if [ "$season_count" -eq 1 ]; then
                season_id=$(echo "$seasons_data" | awk -F'|' '{print $1}')
                season_info=$(echo "$seasons_data" | awk -F'|' '{if ($3 == "null") printf "Special: %s", $2; else printf "Season %s", $3}')
              else
                data_file=$(mktemp)
                trap 'rm -f "$data_file"' RETURN
                echo "$seasons_data" >"$data_file"

                seasons_list=$(echo "$seasons_data" | awk -F'|' '{if ($3 == "null") printf "üìÇ Special: %s\n", $2; else printf "üìÇ Season %s\n", $3}')
                if [ "$MEDIA_PREVIEW" = "true" ]; then
                  selected_season=$(echo "$seasons_list" | fzf --header="$media_name" \
                    --preview "$PREVIEW_SCRIPT '$data_file' {} '$server' '$api_key' '$CACHE_DIR' '$HAS_CHAFA'" \
                    --preview-window=right:40%)
                else
                  selected_season=$(echo "$seasons_list" | fzf --header="$media_name")
                fi

                fzf_exit=$?
                [ "$fzf_exit" -ne 0 ] && break

                season_number=$(echo "$selected_season" | sed -E 's/üìÇ Season ([0-9]+)/\1/')

                if [[ "$selected_season" == "üìÇ Special"* ]]; then
                  season_id=$(echo "$seasons_data" | grep -F "Special" | head -1 | awk -F'|' '{print $1}')
                  season_info="Special"
                else
                  season_id=$(echo "$seasons_data" | grep -F "Season $season_number" | head -1 | awk -F'|' '{print $1}')
                  season_info="Season $season_number"
                fi
              fi

              while true; do
                episodes_data=$(fetch_episodes "$media_id" "$season_id")
                data_file=$(mktemp)
                trap 'rm -f "$data_file"' RETURN
                echo "$episodes_data" >"$data_file"

                episodes_list=$(echo "$episodes_data" | awk -F'|' '{printf "E%02d: %s\n", $3, $2}')
                if [ "$MEDIA_PREVIEW" = "true" ]; then
                  selected_episode=$(echo "$episodes_list" | fzf --header="$season_info" \
                    --preview "$PREVIEW_SCRIPT '$data_file' {} '$server' '$api_key' '$CACHE_DIR' '$HAS_CHAFA'" \
                    --preview-window=right:40%)
                else
                  selected_episode=$(echo "$episodes_list" | fzf --header="$season_info")
                fi

                fzf_exit=$?
                [ "$fzf_exit" -ne 0 ] && { [ "$season_count" -eq 1 ] && break 2 || break; }

                episode_name=$(echo "$selected_episode" | sed -E 's/^E[0-9]+: (.*)/\1/')
                episode_data=$(echo "$episodes_data" | grep -F "$episode_name" | head -1)
                episode_id=$(echo "$episode_data" | awk -F'|' '{print $1}')
                episode_display_name=$(echo "$episode_data" | awk -F'|' '{print $2}')
                episode_num=$(echo "$episode_data" | awk -F'|' '{print $3}')

                play_episode_with_autoplay "$episode_id" "$episode_display_name" "$episode_num" "$episodes_data" "$media_id" "$season_id"
              done

              [ "$season_count" -eq 1 ] && break
            done
          else
            play_media "$media_id" "$media_name" "$(get_playback_progress "$media_id")" >/dev/null
          fi
        done
      done
      ;;

    "üîç Search")
      tmp_file=$(mktemp)
      trap 'rm -f "$tmp_file"' RETURN

      while IFS="|" read -r library_id library_name; do
        fetch_media "$library_id" | awk -F'|' -v lib="$library_name" '{
            if ($2 == "Movie") icon = "üé¨";
            else if ($2 == "Series") icon = "üì∫";
            else icon = "üé¨";
            printf "%s|%s|%s|%s %s\n", $1, $2, $3, icon, $3;
          }' >>"$tmp_file"
      done < <(get_libraries_cached)

      search_loop=true
      while [ "$search_loop" = true ]; do
        if [ "$MEDIA_PREVIEW" = "true" ]; then
          selected=$(cut -d '|' -f 4 "$tmp_file" | fzf --header="Search" \
            --preview "$PREVIEW_SCRIPT '$tmp_file' {} '$server' '$api_key' '$CACHE_DIR' '$HAS_CHAFA'" \
            --preview-window=right:40%)
        else
          selected=$(cut -d '|' -f 4 "$tmp_file" | fzf --header="Search")
        fi

        [ $? -ne 0 ] && search_loop=false && continue

        matching_line=$(awk -F'|' -v display="$selected" '$4 == display' "$tmp_file" | head -1)

        if [ -z "$matching_line" ]; then
          continue
        fi

        media_id=$(echo "$matching_line" | cut -d'|' -f1)
        media_type=$(echo "$matching_line" | cut -d'|' -f2)
        media_name=$(echo "$matching_line" | cut -d'|' -f3)

        if [ "$media_type" = "Series" ]; then
          seasons_data=$(fetch_seasons "$media_id")
          season_count=$(echo "$seasons_data" | grep -v "^$" | wc -l)

          if [ "$season_count" -eq 1 ]; then
            season_id=$(echo "$seasons_data" | awk -F'|' '{print $1}')
            season_info=$(echo "$seasons_data" | awk -F'|' '{if ($3 == "null") printf "Special: %s", $2; else printf "Season %s", $3}')

            while true; do
              episodes_data=$(fetch_episodes "$media_id" "$season_id")
              data_file=$(mktemp)
              trap 'rm -f "$data_file"' RETURN
              echo "$episodes_data" >"$data_file"

              episodes_list=$(echo "$episodes_data" | awk -F'|' '{printf "E%02d: %s\n", $3, $2}')
              if [ "$MEDIA_PREVIEW" = "true" ]; then
                selected_episode=$(echo "$episodes_list" | fzf --header="$season_info" \
                  --preview "$PREVIEW_SCRIPT '$data_file' {} '$server' '$api_key' '$CACHE_DIR' '$HAS_CHAFA'" \
                  --preview-window=right:40%)
              else
                selected_episode=$(echo "$episodes_list" | fzf --header="$season_info")
              fi

              fzf_exit=$?
              [ "$fzf_exit" -ne 0 ] && break

              episode_name=$(echo "$selected_episode" | sed -E 's/^E[0-9]+: (.*)/\1/')
              episode_data=$(echo "$episodes_data" | grep -F "$episode_name" | head -1)
              episode_id=$(echo "$episode_data" | awk -F'|' '{print $1}')
              episode_display_name=$(echo "$episode_data" | awk -F'|' '{print $2}')
              episode_num=$(echo "$episode_data" | awk -F'|' '{print $3}')

              play_episode_with_autoplay "$episode_id" "$episode_display_name" "$episode_num" "$episodes_data" "$media_id" "$season_id"
            done
          else
            while true; do
              data_file=$(mktemp)
              trap 'rm -f "$data_file"' RETURN
              echo "$seasons_data" >"$data_file"

              seasons_list=$(echo "$seasons_data" | awk -F'|' '{if ($3 == "null") printf "üìÇ Special: %s\n", $2; else printf "üìÇ Season %s\n", $3}')
              if [ "$MEDIA_PREVIEW" = "true" ]; then
                selected_season=$(echo "$seasons_list" | fzf --header="$media_name" \
                  --preview "$PREVIEW_SCRIPT '$data_file' {} '$server' '$api_key' '$CACHE_DIR' '$HAS_CHAFA'" \
                  --preview-window=right:40%)
              else
                selected_season=$(echo "$seasons_list" | fzf --header="$media_name")
              fi

              fzf_exit=$?
              [ "$fzf_exit" -ne 0 ] && break

              season_number=$(echo "$selected_season" | sed -E 's/üìÇ Season ([0-9]+)/\1/')

              if [[ "$selected_season" == "üìÇ Special"* ]]; then
                season_id=$(echo "$seasons_data" | grep -F "Special" | head -1 | awk -F'|' '{print $1}')
                season_info="Special"
              else
                season_id=$(echo "$seasons_data" | grep -F "Season $season_number" | head -1 | awk -F'|' '{print $1}')
                season_info="Season $season_number"
              fi

              while true; do
                episodes_data=$(fetch_episodes "$media_id" "$season_id")
                data_file=$(mktemp)
                trap 'rm -f "$data_file"' RETURN
                echo "$episodes_data" >"$data_file"

                episodes_list=$(echo "$episodes_data" | awk -F'|' '{printf "E%02d: %s\n", $3, $2}')
                if [ "$MEDIA_PREVIEW" = "true" ]; then
                  selected_episode=$(echo "$episodes_list" | fzf --header="$season_info" \
                    --preview "$PREVIEW_SCRIPT '$data_file' {} '$server' '$api_key' '$CACHE_DIR' '$HAS_CHAFA'" \
                    --preview-window=right:40%)
                else
                  selected_episode=$(echo "$episodes_list" | fzf --header="$season_info")
                fi

                fzf_exit=$?
                [ "$fzf_exit" -ne 0 ] && break

                episode_name=$(echo "$selected_episode" | sed -E 's/^E[0-9]+: (.*)/\1/')
                episode_data=$(echo "$episodes_data" | grep -F "$episode_name" | head -1)
                episode_id=$(echo "$episode_data" | awk -F'|' '{print $1}')
                episode_display_name=$(echo "$episode_data" | awk -F'|' '{print $2}')
                episode_num=$(echo "$episode_data" | awk -F'|' '{print $3}')

                play_episode_with_autoplay "$episode_id" "$episode_display_name" "$episode_num" "$episodes_data" "$media_id" "$season_id"
              done
            done
          fi
        elif [ "$media_type" = "Movie" ]; then
          play_media "$media_id" "$media_name" "$(get_playback_progress "$media_id")" >/dev/null
        fi
      done
      ;;

    "‚öôÔ∏è Settings")
      edit_config_file
      LIBRARIES_CACHE=""
      ;;
    esac
  done
}

trap 'echo -e "\nExiting..."; exit 0' SIGINT SIGTERM
main
